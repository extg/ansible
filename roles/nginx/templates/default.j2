server {
    listen 80 default_server;
    listen [::]:80 default_server ipv6only=on;

    root {{nginx_root}};
    index {{nginx_index}};

    server_name nginx_server_name;

    location / {
        try_files $uri $uri/ =404;
    }

    error_page 404 /404.html;
    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        root /usr/share/nginx/html;
    }
}
